	margin:auto;
	padding:10px 10px 0px 30px;
	color:#3d4c5b;
	text-align: center;
	height:20px;
	position:relative;
	top:-28px;
	left:47%;
	display:block;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	background-image: url(<%= asset_path("img/loading.gif") %>);
