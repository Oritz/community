doctype html
html lang="en"
  head
    meta charset="utf-8"
    meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1"
    meta name="viewport" content="width=device-width, initial-scale=1.0"
    title= content_for?(:title) ? yield(:title) : "SonkwoCommunity"
    = csrf_meta_tags

    /! Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = stylesheet_link_tag "admin", :media => "all"
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'

  body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          a.btn.btn-navbar data-target=".nav-collapse" data-toggle="collapse"
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand href="#"Sonkwo Dashboard
          .container.nav-collapse
            ul.nav
              li= link_to t('admin.titles.my_page'), admin_path
              li= link_to t('admin.titles.games'), admin_games_path
              li= link_to t('admin.titles.clients'), admin_clients_path
              li= link_to t('admin.titles.servers'), admin_download_servers_path
              li.divider
            ul.nav.pull-right
              li= link_to t('helpers.links.logout'), destroy_account_session_path
              li.dropdown
                a.dropdown-toggle data-toggle='dropdown' href="#"
                  =t('helpers.language')
                ul.dropdown-menu
                  li= link_to t('helpers.languages.chinese'), '#'
                  li= link_to t('helpers.languages.english'), '#'
    .container

      .row
        .span2
          .well.sidebar-nav
            h3 Sidebar
            ul.nav.nav-list
              li.nav-header Sidebar
              = yield :sidebar
        .span10
          = bootstrap_flash
          = yield :content


      footer
        p &copy; Sonkwo 2013

    = javascript_include_tag "admin"
    = yield :js_files

