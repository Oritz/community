.sns_release
  .radius3px.sns_release_data
    .sns_release_data_top
      .sns_release_data_top_tx_kuang
        .radius3px.sns_release_data_top_tx.top_txvip
          = image_tag(current_account.avatar, height: 60, width: 60)
          .sns_release_data_top_tx_vip
          a href="#"
            img src="images/img/sns_tx_vip1.png" /
            sup 10
      .sns_release_data_top_r
        .sns_release_data_top_dj
          span.top_dj_id
          = link_to current_account.nick_name, "#"
          span.top_dj_id_sj
            ul
              li.sns_tx_id_yxBJ 333
              li.sns_tx_id_jlBJ 222
              li.sns_tx_id_sjBJ 111
        .sns_release_data_top_cj
          span.top_dj_dj
            = link_to "Lv #{level(current_account.exp)}", "#"
          span.top_dj_dj_sj
            i.top_dj_dj_sj_jdt
    .sns_release_data_con
      ul
        li.sns_release_data_con_fs
          = link_to current_account.follower_count, people_user_path(current_account.id)
        li.sns_release_data_con_fx
          = link_to current_account.following_count, people_user_path(current_account.id)
        li.sns_release_data_con_pl
          = link_to current_account.talk_count+current_account.subject_count+current_account.recommend_count, user_path(current_account.id)
        li.sns_release_data_con_ft
          a href="#"  999999999
    .sns_release_data_bom
      a href="#"
  .radius3px.sns_release_enter
    #msgBox
      = form_for(@new_talk) do |f|
        = f.hidden_field :cloud_storage_id
        .countTxt_block
          span.countTxt 还能输入
          strong.maxNum 140
          span 个字
        .conBoxwidth1
          = f.text_area :content, class: "f-text", style: "height: 110px"
        .sendBtn_tr_width1
          .sendBtn_tr
            .sendBtn_tr_L
              span.emotion
                a href="#"  表情
              span.emotion_img
                a href="javascript:void(0);" class="post-pic"  图片
              span.emotion_text
                a href="#"  长文章
              span.emotion_xian
            .sendBtn_tr_R
              .snsshow1
                p
                  a href="#"  举报
              = f.submit("发布")
      .image-upload-block style="display: none;"
        .image-upload-form style="display: none;"
          form#qiniu_uploader method="post" action="http://up.qiniu.com/" enctype="multipart/form-data"
            input name="token" value=@cloud_storage_settings[:upload_token]
            input name="x:account_id" value=current_account.id
            input name="x:timestamp" value=@cloud_storage_settings[:now]
            input name="x:sonkwo_token" value=@cloud_storage_settings[:sonkwo_token]
            input name="x:bucket_name" value="sonkwo-post"
            input name="file" type="file"
            input name="submit" type="submit"
        .image-upload-result
          span.image-upload-before
            a href="javascript:void(0);" class="image-upload-btn" 上传图片
          span.image-upload-loading style="display: none;"
          span.image-upload-after style="display: none;"
            div
              img src="" /
            div
              span
                a href="javascript:void(0);" class="image-upload-cancel" 取消上传
              span
                a href="javascript:void(0);" class="image-upload-reselect" 重新选择
.sns_hr_wrapper
#wrapper
