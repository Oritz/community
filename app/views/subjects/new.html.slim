    h1 发布图文文章
  .popup_boxs style="display: none;"
    = form_tag "/subjects/#{@subject.id}/post_images"  do
      = hidden_field_tag :cloud_storage_id
    .pop-layer.radius3px.brd1.subject_popup#insert_img_box
      .prompt
        .writing
          h3 添加图片
        .prompt-bn
          a.subject_popup_closebtn href="javascript:void(0);"
      .upload_img_box
        form#subject_qiniu_upload method="post" action="http://up.qiniu.com/" enctype="multipart/form-data"
          input name="token" type="hidden" value=@cloud_storage_settings[:upload_token]
          input name="x:account_id" type="hidden" value=current_account.id
          input name="x:timestamp" type="hidden" value=@cloud_storage_settings[:now]
          input name="x:sonkwo_token" type="hidden" value=@cloud_storage_settings[:sonkwo_token]
          input#upload_img_file name="file" type="file"
          input name="x:bucket_name" type="hidden" value="sonkwo-post"
      .upload_img_actions
        input#upload_img_save type="button" value="保存"
        input#upload_img_cancel type="button" value="取消"
